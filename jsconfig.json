{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2022",
      "checkJs": true,
  
      /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
  
      /* Additional Checks */
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true
    },
    "typeAcquisition": {
      "include": ["**/*.d.ts"]
    }
  }
  